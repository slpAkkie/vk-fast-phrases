{
    "manifest_version": 2,
    "name": "vkFastPhrases",
    "version": "2.5.3.17",
    "description": "A way to quickly send prepared messages",
    "author": "slpakkie",
    "permissions": [
        "storage",
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://vk.com/*"
            ],
            "css": [
                "content.css",
                "adsClear.css"
            ],
            "js": [
                "content_scripts/AppData.class.js",
                "content_scripts/Button.class.js",
                "content_scripts/App.class.js",
                "content_scripts/app.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "browser_action": {
        "default_icon": {
            "72": "image/icon/72.png"
        },
        "default_title": "vkFastPhrases Settings",
        "default_popup": "browser_action/popup.html"
    },
    "icons": {
        "72": "image/icon/72.png"
    }
}
