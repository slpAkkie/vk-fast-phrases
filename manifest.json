{
    "manifest_version": 2,
    "name": "vkFastPhrases",
    "version": "1.2.2.0",
    "version_name": "1.2.2.0-beta",
    "description": "A way to quickly send prepared messages",
    "author": "slpakkie",
    "permissions": [
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://vk.com/*"
            ],
            "css": [
                "content_scripts/style.css"
            ],
            "js": [
                "content_scripts/settings.class.js",
                "content_scripts/button.class.js",
                "content_scripts/VKFP-app.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "browser_action": {
        "default_icon": {
            "72": "image/72.png"
        },
        "default_title": "vkFastPhrases Settings",
        "default_popup": "page_action/popup.html"
    },
    "icons": {
        "72": "image/72.png"
    }
}
